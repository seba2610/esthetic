@model Esthetic.Models.ConfigurationModel

@using (Html.BeginForm("UpdateOptions", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-md-6 col-lg-6">
            <div class="form-group">
                @Html.LabelFor(m => m.CoverMainText)
                @Html.TextAreaFor(m => m.CoverMainText, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.CoverDescriptionText)
                @Html.TextAreaFor(m => m.CoverDescriptionText, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ImageUpload)
                <input type="file" name="ImageUpload" id="ImageUpload" class="form-control" />
            </div>

            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" value="">@Html.DisplayNameFor(m => m.ShowCoverGallery)
                    </label>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.GalleryCount)
                @Html.TextBoxFor(m => m.GalleryCount, new { @class = "form-control", @type = "number" })
            </div>
        </div>

        <div class="col-md-6 col-lg-6">
            <div class="form-group">
                @Html.LabelFor(m => m.FacebookFanpage)
                @Html.TextBoxFor(m => m.FacebookFanpage, null, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.FacebookFanpageAlternative)
                @Html.TextBoxFor(m => m.FacebookFanpageAlternative, null, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.InstagramUser)
                @Html.TextBoxFor(m => m.InstagramUser, null, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.InstagramUserAlternative)
                @Html.TextBoxFor(m => m.InstagramUserAlternative, null, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.TweeterUser)
                @Html.TextBoxFor(m => m.TweeterUser, null, new { @class = "form-control" })
            </div>
        </div>
    </div>

    <div class="row">
        <button type="submit" class="btn btn-success pull-left">Guardar cambios</button>
    </div>
}
