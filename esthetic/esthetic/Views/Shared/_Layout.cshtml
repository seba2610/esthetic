@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Anabella Alvarez - Intercoiffeur</title>
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" type="text/css" href="~/Scripts/slick/slick.css" />
    <link rel="stylesheet" type="text/css" href="~/Scripts/slick/slick-theme.css" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:100,300" rel="stylesheet">
</head>
<body>
    @Html.Partial("_MenuPartial")
    <div class="container body-content">
        @RenderBody()
    </div>
    <footer class="footer">
        <div class="container">
            <div class="col-md-8 col-lg-8">
                <p class="pull-left">&copy; @DateTime.Now.Year Anabela Alvarez - Intercoiffeur | Independencia 261 - Florida - Uruguay - +598 435 28197</p>
            </div>
            <div class="col-md-4 col-lg-4">
                <div class="navbar pull-right" id="auth-nav">
                    <ul class="nav">
                        @if (Request.IsAuthenticated)
                        {
                            using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                            {
                                @Html.AntiForgeryToken()
                                <li>
                                    @Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                                </li>
                                <li class="pull-right">
                                    @Html.ActionLink("Administrar", "Categories", "Admin", routeValues: null, htmlAttributes: new { title = "Administrar" }) |
                                    <a href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a>
                                </li>
                            }
                        }
                        else
                        {
                            <li>@Html.ActionLink("Iniciar sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "login" })</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/unobtrusive")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/js")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</body>
</html>
